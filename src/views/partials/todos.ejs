<!DOCTYPE html> 
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vehículos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }
        h3 {
            color: #333;
        }
        .tabs {
            margin-bottom: 20px;
            border-bottom: 2px solid #007bff;
        }
        .tab-button {
            cursor: pointer;
            padding: 10px 15px;
            background: #f0f0f0;
            border: 1px solid #ccc;
            border-bottom: none;
            margin-right: 5px;
            display: inline-block;
            transition: background 0.3s;
        }
        .tab-button:hover {
            background: #e0e0e0;
        }
        .tab-button.active {
            background: #fff;
            border-color: #007bff;
            font-weight: bold;
        }
        .tab {
            display: none; /* Ocultar todas las pestañas por defecto */
            padding: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background: #fff;
        }
        .tab.active {
            display: block; /* Mostrar la pestaña activa */
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: left;
        }
        th {
            background-color: #007bff;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #e9e9e9;
        }
    </style>
</head>
<body>
    <div id="todos" class="tab-pane fade">
        <h3>Vehículos</h3>
        <div class="tabs">
            <div id="mostrarTodosBtn" class="tab-button active">Mostrar Todos</div>
            <div id="consultarVehiculoBtn" class="tab-button">Consultar Vehículo</div>
        </div>

        <div id="mostrarTodos" class="tab active">
            <button id="recargarBtn" class="btn btn-primary mb-3">Recargar Tabla</button>
            <table class="table show">
                <thead>
                    <tr>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Año</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody id="vehiculosTableBody">
                    <% if (vehiculos && vehiculos.length > 0) { %>
                        <% vehiculos.forEach(vehiculo => { %>
                            <tr>
                                <td><%= vehiculo.PLACA %></td>
                                <td><%= vehiculo.MARCA %></td>
                                <td><%= vehiculo.MODELO %></td>
                                <td><%= vehiculo.ANIO %></td>
                                <td><%= vehiculo.ESTADO %></td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="5">No hay vehículos registrados.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div id="consultarVehiculo" class="tab">
            <h4>Consultar Vehículo</h4>
            <p>Todo en funcionamiento.</p>
        </div>
    </div>

    <script>
        // Función para cargar la tabla de vehículos
        function cargarVehiculos() {
            fetch('/api/vehiculos') // Ruta a la API que devuelve los vehículos
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    const tableBody = document.getElementById('vehiculosTableBody');
                    tableBody.innerHTML = ''; // Limpiar tabla

                    if (data && data.length > 0) {
                        data.forEach(vehiculo => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                                <td>${vehiculo.PLACA}</td>
                                <td>${vehiculo.MARCA}</td>
                                <td>${vehiculo.MODELO}</td>
                                <td>${vehiculo.ANIO}</td>
                                <td>${vehiculo.ESTADO}</td>
                            `;
                            tableBody.appendChild(row);
                        });
                    } else {
                        const row = document.createElement('tr');
                        row.innerHTML = '<td colspan="5">No hay vehículos registrados.</td>';
                        tableBody.appendChild(row);
                    }
                })
                .catch(err => console.error('Error al cargar vehículos:', err));
        }

        // Evento para recargar la tabla al hacer clic en el botón
        document.getElementById('recargarBtn').addEventListener('click', cargarVehiculos);

        // Cambiar entre pestañas
        document.getElementById('mostrarTodosBtn').addEventListener('click', () => {
            document.getElementById('mostrarTodos').classList.add('active');
            document.getElementById('consultarVehiculo').classList.remove('active');
            document.getElementById('mostrarTodosBtn').classList.add('active');
            document.getElementById('consultarVehiculoBtn').classList.remove('active');
        });

        document.getElementById('consultarVehiculoBtn').addEventListener('click', () => {
            document.getElementById('mostrarTodos').classList.remove('active');
            document.getElementById('consultarVehiculo').classList.add('active');
            document.getElementById('mostrarTodosBtn').classList.remove('active');
            document.getElementById('consultarVehiculoBtn').classList.add('active');
        });

        // Carga inicial de vehículos al cargar la página
        document.addEventListener('DOMContentLoaded', cargarVehiculos);
    </script>
</body>
</html>