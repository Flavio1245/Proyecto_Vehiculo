<div id="eliminar" class="tab-pane fade">
    <h3>Eliminar Vehículo</h3>
    <form id="eliminarForm">
        <div class="form-group">
            <label for="placaEliminar">Placa:</label>
            <input type="text" id="placaEliminar" class="form-control" placeholder="Ingrese la placa a eliminar" required>
        </div>
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
</div>

<script>
    document.getElementById('eliminarForm').addEventListener('submit', function(e) {
        e.preventDefault();
        const placa = document.getElementById('placaEliminar').value.trim();

        if (placa === '') {
            alert('Por favor, ingrese una placa válida.');
            return;
        }

        fetch(`/api/vehiculos/${placa}`, {
            method: 'DELETE'
        })
        .then(response => {
            if (response.ok) {
                alert('Vehículo eliminado con éxito');
                document.getElementById('placaEliminar').value = '';
                document.getElementById('reloadBtn').click(); // Recargar la tabla
            } else {
                alert('Error al eliminar el vehículo. Verifique que la placa exista.');
            }
        })
        .catch(err => {
            console.error('Error:', err);
        });
    });
</script>
